<%- include('../partials/header', {titulo: 'GreenRide - altaVehiculos' , pagina: 'altaVehiculos'}) %>

<main class="container">
    <div class="cuadrado">   
        <form id="altaVehiculosForm" class="needs-validation" novalidate>
            <h2 class="text-center text-light mb-4">Registrar Vehículo</h2>

            <div class="row">

                <!-- COLUMNA IZQUIERDA -->
                <div class="col-md-6">

                    <div class="mb-3">
                        <label class="form-label text-light">Matrícula</label>
                        <input type="text" class="form-control" id="matricula" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-light">Marca</label>
                        <input type="text" class="form-control" id="marca" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-light">Modelo</label>
                        <input type="text" class="form-control" id="modelo" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-light">Año de matriculación</label>
                        <input type="number" class="form-control" id="ano_matriculacion" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-light">Número de plazas</label>
                        <input type="number" class="form-control" id="numero_plazas" required>
                    </div>

                </div>

                <!-- COLUMNA DERECHA -->
                <div class="col-md-6">

                    <div class="mb-3">
                        <label class="form-label text-light">Autonomía (km)</label>
                        <input type="number" class="form-control" id="autonomia_km" required>
                    </div>

                    <div class="mb-3">
                    <label class="form-label text-light">Color</label>
                        <select class="form-select" id="color" required>
                            <option value="">Cualquiera</option>
                            <option value="rojo">rojo</option>
                            <option value="negro">negro</option>
                            <option value="blanco">blanco</option>
                            <option value="azul">azul</option>
                            <option value="verde">verde</option>
                            <option value="amarillo">amarillo</option>
                            <option value="gris">gris</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-light">Imagen (URL)</label>
                        <input type="text" class="form-control" id="imagen" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-light">Estado</label>
                        <select class="form-select" id="estado" required>
                            <option value="">Selecciona un estado</option>
                            <option value="disponible">Disponible</option>
                            <option value="reservado">Reservado</option>
                            <option value="mantenimiento">Mantenimiento</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="concesionario" class="form-label text-light">Concesionario</label>
                        <select class="form-select" id="concesionario" name="concesionario" required>
                            <option value="">Selecciona un concesionario</option>
                        </select>
                    </div>

                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">Crear Vehículo</button>
        </form>
    </div>
</main>

<%- include('../partials/footer', {pagina: 'altaVehiculos' }) %>
